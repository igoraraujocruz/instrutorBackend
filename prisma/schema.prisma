generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id         String @id @default(uuid())
  nome       String
  cpf        String? @unique
  email      String? @unique
  telefone   String? @unique
  provider   String
  providerId String
  foto       String?

  instrutor  Instrutor?

  @@unique([provider, providerId])
}

model Instrutor {
  id                String @id @default(uuid())
  estado            String
  cidade            String
  cidadeSlug        String
  classe            String
  descricao         String?
  preco             Float
  latitude          Float
  longitude         Float
  certificadoCodigo String?
  certificado       String?
  slug              String @unique

  usuarioId         String @unique
  usuario           Usuario @relation(fields: [usuarioId], references: [id])

  avaliacoes        Avaliacao[]
}

model Avaliacao {
  id          String @id @default(uuid())
  aluno       String
  nota        Int
  comentario  String
  data        DateTime

  instrutor   Instrutor @relation(fields: [instrutorId], references: [id], onDelete: Cascade)
  instrutorId String
}
