generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id         String @id @default(uuid())
  nome       String
  cpf        String? @unique
  email      String? @unique
  telefone   String? @unique
  provider   String
  providerId String
  foto       String?

  instrutor  Instrutor?
  avaliacoes Avaliacao[]

  @@unique([provider, providerId])
}

model Instrutor {
  id                String @id @default(uuid())
  estado            String
  cidade            String
  cidadeSlug        String
  classe            String
  descricao         String?
  preco             Float
  latitude          Float
  longitude         Float
  certificadoCodigo String?
  certificado       String?
  slug              String @unique

  usuarioId         String @unique
  usuario           Usuario @relation(fields: [usuarioId], references: [id])

  avaliacoes        Avaliacao[]
}

model Avaliacao {
  id          String   @id @default(uuid())
  nota        Int
  comentario  String?

  usuarioId   String
  usuario     Usuario   @relation(fields: [usuarioId], references: [id])

  instrutorId String
  instrutor   Instrutor @relation(fields: [instrutorId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime? 

  @@unique([usuarioId, instrutorId, deletedAt])
  @@index([deletedAt])
}

